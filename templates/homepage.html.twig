{% extends "base.html.twig" %}
    {% block title %}
        Accueil
    {% endblock %}


{% block body %}
    <h1>Nos produits phares</h1>
    <div class="row">
        {% for product in products %}
            <div class="col">
                <div class="card">
                    <img src="{{ product.mainPicture }}" class="img-fluid" alt="image of product">
                </div>
                <div class="card-body">
                    <div class="card-title">
                        <h4>{{ product.name | upper }} ({{ product.price }} &euro; )</h4>
                        <span class="badge bg-secondary">{{ product.category.name }}</span>

                        <p class="card-text">{{ product.shortDescription }}</p>
                        <a href="{{ path('product_show', {'slug_category': product.category.slug, 'slug': product.slug }) }}" class="btn btn-primary btn-sm">Detail</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr>
    <h2>Un service parfait</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium, possimus.</p>
    <div class="row">
        {% include "shared/_assurance.html.twig" with {
            color: 'primary',
            icone: 'fa-solid fa-truck',
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Debitis exercitationem facere labore necessitatibus officia sapiente."
        } %}
        {% include "shared/_assurance.html.twig" with {
            color: 'success',
            icone: 'fa-solid fa-check',
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Debitis exercitationem facere labore necessitatibus officia sapiente."
        } %}
        {% include "shared/_assurance.html.twig" with {
            color: 'warning',
            icone: 'fa-solid fa-lock',
            text: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Debitis exercitationem facere labore necessitatibus officia sapiente."
        } %}
    </div>
{% endblock %}

